{
	"version": "1.0.00",
	"name": "ROBLOX+",
	"short_name": "ROBLOX+",
	"description": "A browser extension that adds features to the ROBLOX website",
	
	"icons": {
		"16": "/images/icons/icon_16x16.png",
		"48": "/images/icons/icon_64x64.png",
		"128": "/images/icons/icon_128x128.png"
	},

	
	"background": {
		"page": "/background/background.html"
	},
	
	"content_scripts": [
		{
			"js": [
				"/lib/jquery-3.1.1.min.js",
				
				"/lib/global.js",
				"/lib/ext.js",
				"/lib/soundService.js",
				"/lib/jquery.trigger.js",
				"/lib/jquery.notifications.js",
				"/lib/jquery.storage.js",
				"/lib/jquery.cache.js",
				
				"/lib/roblox/Roblox.js",
				"/lib/roblox/xsrfHandler.js",
				"/lib/roblox/thumbnails.js",
				"/lib/roblox/users.js",
				"/lib/roblox/games.js",
				"/lib/roblox/audio.js",
				"/lib/roblox/catalog.js",
				"/lib/roblox/inventory.js",
				"/lib/roblox/tradeService.js",
				"/lib/roblox/privateMessages.js",
				"/lib/roblox/social.js",
				
				"/rplus.js",
				"/content/rplus/json.js"
			],
			"css": [
				"/css/RPlus.css",
				"/css/infoBox.css"
			],
			"matches": [
				"*://*.roblox.com/*"
			],
			"run_at": "document_start"
		},
		{
			"js": [
				"/content/rplus/navigation.js",
				"/content/rplus/storage.js",
				"/content/rplus/slider.js",
				"/content/rplus/infoBox.js"
			],
			"matches": [
				"*://*.roblox.com/*"
			],
			"run_at": "document_end"
		},
		
		{
			"css": [
				"/css/pages/Account.css"
			],
			"matches": [
				"*://*.roblox.com/my/account?tab=rplus"
			],
			"run_at": "document_start"
		},
		{
			"js": [
				"/content/Account.js"
			],
			"matches": [
				"*://*.roblox.com/my/account?tab=rplus"
			],
			"run_at": "document_end"
		},
		
		{
			"css": [
				"/css/lib/hljs.css",
				"/css/pages/Forums.css"
			],
			"matches": [
				"*://*.roblox.com/Forum/*"
			],
			"run_at": "document_start"
		},
		{
			"js": [
				"/lib/highlight.pack.js",
				"/content/Forums.js"
			],
			"matches": [
				"*://*.roblox.com/Forum/*"
			],
			"run_at": "document_end"
		},
		
		{
			"css": [
				"/css/pages/Profile.css"
			],
			"matches": [
				"*://*.roblox.com/users/*/profile*"
			],
			"run_at": "document_start"
		},
		{
			"js": [
				"/content/Profile.js"
			],
			"matches": [
				"*://*.roblox.com/users/*/profile*"
			],
			"run_at": "document_end"
		},
		
		{
			"js": [
				"/content/Asset.js"
			],
			"matches": [
				"*://*.roblox.com/catalog/*/*"
			],
			"run_at": "document_end"
		}
	],
	
	"browser_action": {
		"default_icon": {
            "19": "/images/icons/icon_32x32.png",
			"38": "/images/icons/icon_64x64.png"
		},
		"default_title": "ROBLOX+",
		"default_popup": "/html/notifications.html"
	},
	
	
	"homepage_url": "https://*.roblox.com/my/account?*tab=rplus*",
	"permissions": [
		"gcm",
		"contextMenus",
		"webRequest",
		"webRequestBlocking",
		"tts",
		"notifications",
		"*://*.roblox.com/*",
		"*://*.rbxcdn.com/*",
		"*://*.roblox.plus/*"
	],
	"optional_permissions": ["<all_urls>"],
	"web_accessible_resources": [
		"*.css",
		"*.svg",
		"*.png",
		"*.html",
		"*.js",
		"*.map",
		"*.ico",
		"*.json",
		"*://*.roblox.com/*",
		"*://*.rbxcdn.com/*",
		"*://*.roblox.plus/*"
	],
	
	
	"manifest_version": 2,
	"incognito": "split"
}